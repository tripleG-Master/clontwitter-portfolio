<article class="container pb-3 px-0 bg-none border-top border-bottom ">
    <div class="card border-0 p-0 text-start">
        <div class="card-header border-0 d-flex text-white">
            <i class="bi bi-person-circle"></i>
            <span class="card-title ms-2 border-0 fs-6 text-white">
                <%= tweet.user%> 
                <span class="text-light">@acount.alias Â· 1h</span>
            </span>
        </div>
        <div class="card-body">
            <p class="card-text border-0 text-white">
                <%= tweet.content%>
            </p>
        </div>
        <div class="card-footer w-100 border-0 text-white">
            <div class="d-flex w-100 border-0 align-items-end text-white">
                <%= link_to tweet_path(tweet), class:"btn border-none text-white" do %>
                    <i class="bi bi-chat"></i> 
                <% end %>
                <button class="btn disabled border-0">
                    <i class="bi bi-arrow-down-up"></i> 
                </button> 
                <button class="btn disabled border-0">
                    <i class="bi bi-heart"></i>
                </button> 
                <button class="btn disabled border-0">
                    <i class="bi bi-bar-chart"></i>
                </button> 
                <button class="btn disabled border-0">
                    <i class="bi bi-bookmark"></i>
                </button> 
                <button class="btn disabled border-0">
                    <i class="bi bi-share"></i>
                </button> 
                <% if current_page?(tweet_path(tweet.id)) %>
                
                    <%= link_to edit_tweet_path(tweet.id), class:"btn border-none text-white" do %>
                            <i class="bi bi-pen"></i>
                    <% end %>
                    
                    <%= button_to @tweet, class:"btn border-none text-white", method: :delete do%>
                        <i class="bi bi-trash3"></i>
                    <%end%>
                <%end%>

            </div>
        </div>
    </div>
</article>

